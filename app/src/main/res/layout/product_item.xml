<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="wrap_content"
        android:layout_height="212dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pro_1" />

    <TextView
        android:id="@+id/tv_product"
        android:layout_width="134dp"
        android:layout_height="73dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cat_background"
        android:paddingStart="20dp"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_product"
        app:layout_constraintEnd_toEndOf="@+id/iv_product"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/iv_product" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X.XXX VNĐ"
        android:textColor="#BA5C3D"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product"
        app:layout_constraintEnd_toEndOf="@+id/tv_product"
        app:layout_constraintHorizontal_bias="0.349"
        app:layout_constraintStart_toStartOf="@+id/tv_product"
        app:layout_constraintTop_toTopOf="@+id/tv_product"
        app:layout_constraintVertical_bias="0.574" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:drawableEnd="@drawable/ic_star"
        android:text="4.2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_product"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>